-- usuario de solo_lectira con permisos de solo lectura
CREATE USER 'SOLO_LECTURA'@'LOCALHOST' IDENTIFIED BY 'PASS_1';

-- CONCEDER PERMISOS DE SOLO LECTURA EN TODAS LAS TABLAS 
GRANT SELECT ON proyectosql_50065. * TO 'SOLO_LECTURA'@'LOCALHOST';

-- USUARIO LECTURA_INSERCION_MODIFICACION CON PERMISIS DE LECTURA, INSERCION Y MODIFICACION
CREATE USER 'LECTURA_INSERCION_MODIFICACION'@'LOCALHOST' IDENTIFIED BY 'PASS_2';

-- CONCEDER PERMISOS DE LECTURA, INSERCION Y MODIFICACION EN TODAS LAS TABLAS. NO SE PERMITE ELIMINAR REGISTROS
GRANT SELECT, INSERT, UPDATE ON proyectosql_50065. * TO
'LECTURA_INSERCION_MODIFICACION'@'LOCALHOST';

-- ELIMINAR LA CAPACIDAD DE ELIMINAR REGISTROS PARA AMBOS USUARIOS Y QUE SE APLIQUE PARA AMBOS USUARIOS APLICADO A NIVEL GLOBAL
REVOKE DELETE ON *.* FROM 'SOLO_LECTURA'@'LOCALHOST';

REVOKE DELETE ON *.* FROM 'LECTURA_INSERCION_MODIFICACION'@'LOCALHOST';  

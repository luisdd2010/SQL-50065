delimiter ; 

-- 2. insercion de ventas
-- este procedimiento permite la realizacion de las ventas

delimiter //CREATE PROCEDURE ventas_realizadas (idventa int,
pr float,
unidades      int,
idcliente     int,
idcanal       int,
idvendedor    int,
idformadepago int,
idprod        int)
BEGININSERT INTO ventas
              (
                          id_venta,
                          fecha,
                          precio,
                          cantidad,
                          id_cliente,
                          id_canal,
                          id_vendedor,
                          id_forma_de_pago,
                          id_producto
              )
              VALUES
              (
                          idventa,
                          Now(),
                          pr,
                          unidades,
                          idcliente,
                          idcanal,
                          idvendedor,
                          idformadepago,
                          idprod
              );END;//
delimiter;



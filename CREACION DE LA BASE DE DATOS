-- Crear la base de datos del negocio
CREATE DATABASE IF NOT EXISTS PROYECTOSQL_50065;
USE PROYECTOSQL_50065;
-- Tabla de clientes
CREATE TABLE IF NOT EXISTS CLIENTES(
ID_CLIENTE INT auto_increment PRIMARY KEY,
RAZON_SOCIAL VARCHAR(150) NOT NULL UNIQUE,
CUIL_CUIT INT NOT NULL unique,
DOMICILIO VARCHAR(150) NOT NULL,
CIUDAD VARCHAR(50) NOT NULL,
CP VARCHAR(15));
-- TABLA DE VENDEDORES
CREATE TABLE IF NOT EXISTS VENDEDORES(
ID_VENDEDOR INT AUTO_INCREMENT PRIMARY KEY,
NOMBRE_APELLIDO VARCHAR(150) NOT NULL,
CUIL_CUIT INT NOT NULL,
DOMICILIO VARCHAR(150) NOT NULL,
CIUDAD VARCHAR(50) NOT NULL);
-- TABLA DE FORMAS DE PAGO
CREATE TABLE IF NOT EXISTS FORMAS_DE_PAGO(
ID_FORMAS_DE_PAGO INT AUTO_INCREMENT PRIMARY KEY,
DESCRIPCION VARCHAR(255) NOT NULL);
-- TABLA DE GRUPO DE PRODUCTOS
CREATE TABLE IF NOT EXISTS GRUPO_DE_PRODUCTOS(
ID_GRUPO INT AUTO_INCREMENT PRIMARY KEY,
DESCRIPCION VARCHAR(255) NOT NULL);
-- TABLA DE PROVEEDORES
CREATE TABLE IF NOT EXISTS PROVEEDORES(
ID_PROVEEDOR INT AUTO_INCREMEnT PRIMARY KEY,
DESCRIPCION VARCHAR(255) NOT NULL,
RAZON_SOCIAL VARCHAR(150),
CUIL_CUIT INT,
ID_FORMA_DE_PAGO INT,
foreign key (ID_FORMA_DE_PAGO) REFERENCES FORMAS_DE_PAGO(ID_FORMAS_DE_PAGO));
-- tabla de canales
create table if not exists canales(
id_canal int auto_increment primary key,
descripcion varchar(20) not null);
-- TABLA DE PRODUCTOS
CREATE TABLE IF NOT EXISTS PRODUCTOS(
ID_PRODUCTO INT auto_increment PRIMARY KEY,
DESCRIPCION VARCHAR(255) NOT NULL,
PRECIO DECIMAL NOT NULL,
ID_GRUPO INT,
ID_PROVEEDOR INT,
FOREIGN KEY (ID_GRUPO) REFERENCES GRUPO_DE_PRODUCTOS(ID_GRUPO),
FOREIGN KEY (ID_PROVEEDOR) REFERENCES PROVEEDORES(ID_PROVEEDOR));
-- TABLA DE INGRESOS
CREATE TABLE IF NOT EXISTS INGRESOS(
ID_INGRESO INT AUTO_INCREMENT PRIMARY KEY,
NRO_FACTURA VARCHAR(255) NOT NULL,
FECHA DATE,
CANTIDAD decimal,
ID_PRODUCTO INT,
FOREIGN KEY (ID_PRODUCTO) REFERENCES PRODUCTOS(ID_PRODUCTO));
-- TABLA DE VENTAS
CREATE TABLE IF NOT EXISTS VENTAS(
ID_VENTA INT AUTO_INCREMENT PRIMARY KEY,
FECHA DATE,
PRECIO DECIMAL,
CANTIDAD DECIMAL,
ID_CLIENTE INT,
ID_CANAL INT,
ID_VENDEDOR INT,
ID_FORMAS_DE_PAGO INT,
ID_PRODUCTO INT,
FOREIGN KEY (ID_CLIENTE) REFERENCES CLIENTES(ID_CLIENTE),
FOREIGN KEY (ID_VENDEDOR) REFERENCES VENDEDORES(ID_VENDEDOR),
FOREIGN KEY (ID_CANAL) REFERENCES CANALES(ID_CANAL),
FOREIGN KEY (ID_FORMAS_DE_PAGO) REFERENCES FORMAS_DE_PAGO(ID_FORMAS_DE_PAGO),
FOREIGN KEY (ID_PRODUCTO) REFERENCES PRODUCTOS(ID_PRODUCTO));

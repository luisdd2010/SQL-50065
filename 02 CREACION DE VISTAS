-- vistas principales

-- 1. PRECIOS DE PRODUCTOS

CREATE OR REPLACE VIEW PRECIOS_DE_PRODUCTOS AS
(SELECT DESCRIPCION, PRECIO FROM productos);

SELECT * FROM PRECIOS_DE_PRODUCTOS;

-- 2. VENDEDORES

CREATE OR REPLACE VIEW VENDEDORES_Y_CIUDADES AS
(SELECT NOMBRE_APELLIDO, CIUDAD FROM vendedores);

SELECT * FROM VENDEDORES_Y_CIUDADES;

-- 3. CLIENTES POR ZONA

CREATE OR REPLACE VIEW CLIENTES_POR_ZONA AS
SELECT RAZON_SOCIAL AS NOMBRE_CLIENTE,
CIUDAD AS CIUDAD FROM CLIENTES;

SELECT * FROM CLIENTES_POR_ZONA;

-- 4. CANTIDAD DE VENDEDORES

CREATE OR REPLACE VIEW CANTIDAD_DE_VENDEDORES AS
SELECT COUNT(NOMBRE_APELLIDO) AS CANTIDAD_DE_VENDEDORES
FROM vendedores;

SELECT * FROM CANTIDAD_DE_VENDEDORES;

-- 5. CANTIDAD DE ARTICULOS POR PROVEEDOR

CREATE OR REPLACE VIEW CANTIDAD_DE_ARTICULOS_POR_PROVEEDOR AS
SELECT ID_PROVEEDOR AS PROVEEDOR,
COUNT(ID_PROVEEDOR) AS CANTIDAD
FROM productos
GROUP BY ID_PROVEEDOR;
